@using BLL.Abstract
@using UI.Helpers
@model UI.Models.ViewModels.ExampleViewModel

@{
	//ViewBag.Title = "Example List";
	Layout = "~/Views/Shared/_LayoutFullWidth.cshtml";
	//string action = User.IsInRole("Admin") ? "IndexForAdmin" : "IndexForEditor";
	ViewDataDictionary dict_h = new ViewDataDictionary();
	dict_h.Add("Header", ModelType.Example.ToString());
	dict_h.Add("Create", "Edit");
	dict_h.Add("Controller", ModelType.Example.ToString());

}

@*<div><span class="h3 blue">@ModelType.Example</span><span class="fRight">@Html.ActionLink(THResources.Resources.Add, "Edit", ModelType.Example.ToString(), new { id = "0" }, null)</span></div>
<div class="clearRight">&nbsp;</div>*@

@Html.Partial("_IndexHeader", dict_h)
<table class="table">

	@foreach (var items in Model.ExampleListInGroup)
	{
		<thead>
			<tr>
				<td style="border-top:none;">ColId: @items.Key</td>
			</tr>
		</thead>

		<tbody>
			<tr>
				<td>
					<table class="table">
						<thead>
							<tr>
								<th style="width:40%;">
									Entry
								</th>
								<th style="width:15%;">
									條目
								</th>
								<th style="width:15%;">
									条目
								</th>
								<th style="width:15%;">
									エントリー
								</th>
								<th style="width:5%;"><span class="h6">Source</span></th>
								<th style="width:5%;"><span class="h6">Remark</span></th>
								<th style="width:5%;"></th>
							</tr>
						</thead>

						<tbody>
							@foreach (var item in items)
							{
								<tr>
									<td>

										@{
								Example item1 = item;
										}
										@Html.DisplayFor(modelItem => item1.Entry)
									</td>
									<td>

										@{
								Example item2 = item;
										}
										@Html.DisplayFor(modelItem => item2.EntryZht)
									</td>
									<td>
										@{
								Example item9 = item;
										}
										@Html.DisplayFor(modelItem => item9.EntryZhs)
									</td>

									<td>

										@{
								Example item3 = item;
										}
										@Html.DisplayFor(modelItem => item3.EntryJap)
									</td>
									<td>
										@{
								Example item4 = item;
										}
										<span class="text-smaller">@Html.DisplayFor(modelItem => item4.Source)</span>
									</td>
									<td>
										@{Example item5 = item;}
										<span class="text-smaller">
											@Html.DisplayFor(modelItem => item5.RemarkZht, null, new { @class = "text-smaller" })|@{
								Example item6 = item;}
											@Html.DisplayFor(modelItem => item6.RemarkZhs, new { @class = "text-smaller" })|@{
								Example item7 = item;}
											@Html.DisplayFor(modelItem => item7.RemarkJap, new { @class = "text-smaller" })</span>
</td>
									<td>
										<span class="text-smaller">
											@Html.ActionLink("Edit", "Edit", new { id = item.Id }) | 
											@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { id = item.Id, returnUrl = Request.Url, onclick = string.Format("return confirm('{0}');", THResources.Resources.ConfirmDelete) })</span>
</td>
								</tr>
							}
						</tbody>
					</table>
					<h4>&nbsp;</h4>
				</td>
			</tr>

		</tbody>

	}

</table>



<div class="pagination">
	@Html.PageLinks(Model.ExamplePagingInfo, x => Url.Action("Index", "Example", new { page = x }))
</div>
