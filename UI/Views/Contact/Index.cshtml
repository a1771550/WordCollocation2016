@model UI.Models.ViewModels.ContactViewModel

@{
	ViewBag.Title = THResources.Resources.IhaveOpinion;
}
<div class="offset1 span6">
	<h2>@THResources.Resources.IhaveOpinion</h2>

	<p class="lead">@THResources.Resources.OpinionParagraph</p>

	@if (!string.IsNullOrEmpty(ViewBag.MessageOK))
	{
		<h4>@ViewBag.MessageOK</h4>
	}
	
	<h3>@THResources.Resources.YourOpinion</h3>

		@using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { @class = "contact-form" }))
		{
			@Html.AntiForgeryToken()

			@Html.ValidationSummary(false)

			
				<div class="form-group">
					@Html.LabelFor(model => model.Name)
					@Html.TextBoxFor(model => model.Name, new { id = "Name", @class = "text", placeholder = THResources.Resources.Name})
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.Email)
					@Html.TextBoxFor(model => model.Email, new { id = "Email", @class = "text", placeholder = THResources.Resources.Email })
				</div>
			

			<div class="form-group">
				@Html.LabelFor(model => model.MessageText)
				@Html.TextAreaFor(model => model.MessageText, new { id = "message-text", rows = "10", cols = "30", style = "box-sizing: content-box;", placeholder = THResources.Resources.Opinion})
			</div>

			<button type="submit">@THResources.Resources.Send</button>

		}
	</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}