@using System.Web.Configuration
@{
	Layout = null;
	string link = string.Format("http://{0}/Account/ResetPasswordConfirmation/{1}", WebConfigurationManager.AppSettings.Get("SiteUrl"), ViewBag.ConfirmationToken);
}

@Resources.MailTo: @ViewBag.To
@Resources.MailFrom: @WebConfigurationManager.AppSettings.Get("NoReplyMail")
@Resources.MailSubject: @Resources.ResetPassword

@ViewBag.UserName @Resources.Salute @Resources.Hello,
@Resources.ResetPasswordParagraph:
@link
@*http://www.wordcollocation.net/Account/ResetPasswordConfirmation/@ViewBag.ConfirmationToken*@