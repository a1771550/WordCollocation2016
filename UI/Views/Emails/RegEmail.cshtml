@using System.Web.Configuration
@{
	Layout = null;
	string link = string.Format("http://{0}/Account/RegisterConfirmation/{1}", WebConfigurationManager.AppSettings.Get("SiteUrl"), ViewBag.ConfirmationToken);
}

@Resources.MailTo: @ViewBag.To
@Resources.MailFrom: @WebConfigurationManager.AppSettings.Get("NoReplyMail")
@Resources.MailSubject: @Resources.CompleteRegisterProcess

@ViewBag.UserName @Resources.Salute @Resources.Hello,

@Resources.ToCompleteRegisterClickLink:
@link