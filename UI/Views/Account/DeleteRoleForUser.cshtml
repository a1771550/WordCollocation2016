@model AssignRoleVM

@{
    ViewBag.Title = "Delete Role ForUser";
}

<h3>Delete a User from a Role</h3>

<div>
    

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
		@Html.ValidationSummary(true)
	    <div class="message-success">@ViewBag.ResultMessage</div>
	    <table class="pad3table">
		    <tr>
			    <td>User Name:</td>
			    <td>@Html.DropDownListFor(model => model.User.UserName, new SelectList(Model.UserDropDown, "Value", "Text"), new {style = "width:200px"})</td>
		    </tr>
		    <tr>
			    <td>Role Name:</td>
			    <td>@Html.DropDownListFor(model => model.Role.RoleName, new SelectList(Model.RoleDropDown, "Value", "Text"), new {style = "width:200px"})</td>
		    </tr>
		    <tr><td colspan="2"><input type="submit" value="Delete" class="btn btn-default" /></td></tr>
	    </table>
        
    }
</div>
