@using UI.Helpers
@model UI.Models.ViewModels.RoleViewModel

@{
	ViewBag.Title = Resources.RoleManagement;
}

<p>
	@Html.ActionLink(Resources.AddRole, "RoleCreate", "Account") | @Html.ActionLink(Resources.RoleAddToUser, "RoleAddToUser", "Account")
</p>
<table class="table table-bordered table-responsive table-striped table-condensed">
	<thead>
		<tr>
			<th>
				@Resources.Role
			</th>

			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (Role role in AccountHelper.GetRoleList())
			{
			<tr>
				<td>
					@role.RoleName
				</td>

				<td>
					@Html.ActionLink(Resources.Edit, "RoleEdit", "Account", new { roleId = role.RoleId }, null)
				</td>
			</tr>
			}
	</tbody>
</table>

<div id="role" class="pagination">
	@Html.PageLinks(Model.RolePagingInfo, x => Url.Action("RoleIndex", "Account", new { page = x }))
</div>


